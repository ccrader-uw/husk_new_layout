<Touchpanel>:
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/background.png' 
    # Controls
    BoxLayout:
        pos: 25, 50
        orientation: 'horizontal'
        # Display buttons
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Display'
            Button:
            Button:
            Button:
            Button:
        # Input buttons
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Input'
            Button:
            Button:
            Button:
            Button:
        # Audio slider and button(s)
        BoxLayout:
            Label:
                text: 'Audio'
            Slider:
            Button:
            Button: 
